<Window x:Class="covid_aulas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:covid_aulas"
        mc:Ignorable="d"
        Title="Gestion del Covid-19" MinHeight="400" Height="auto" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="btnPagAulas" MaxHeight="50" VerticalAlignment="Top" Content="Aulas" Padding="10" Click="NavAula_Click"></Button>
            <Button x:Name="btnPagAlumnos" MaxHeight="50" Content="Alumnos" VerticalAlignment="Top" Padding="10" Click="NavAlumno_Click"></Button>
            <Button x:Name="btnPagAsistencia" MaxHeight="50" Content="Asistencia" VerticalAlignment="Top" Padding="10" Click="NavAsistencia_Click"></Button>
            <Button x:Name="btnPagInforme" MaxHeight="50" Content="Informe" VerticalAlignment="Top" Padding="10" Click="NavInforme_Click"></Button>
        </StackPanel>
        <Frame x:Name="framePrincipal" Margin="0,44,0,0" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
